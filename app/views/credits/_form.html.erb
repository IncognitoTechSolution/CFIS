        </div>

    <% when '0' %>

        <div class="field">
          <%= f.label :isreturnedtofiler %><br>
          <%= f.check_box :isreturnedtofiler, :checked => false %>
        </div>

    <% else %>

        <div class="field">
          <%= f.label :isreturnedtofiler %><br>
          <%= f.check_box :isreturnedtofiler, :checked => false %>
        </div>

  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
